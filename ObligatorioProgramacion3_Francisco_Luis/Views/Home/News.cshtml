@model ObligatorioProgramacion3_Francisco_Luis.Models.NewsViewModel
@{
	ViewBag.Title = "Noticias - Voz del Este";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		background: linear-gradient(135deg, #667eea 0%, #5ebdff 100% 100%);
		min-height: 100vh;
		color: #333;
	}

	.container.body-content {
		background: transparent;
		max-width: 1400px;
		margin: 0 auto;
		padding: 2rem 1rem;
	}

	/* Header Section */
	.news-header {
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(10px);
		border-radius: 20px;
		padding: 3rem 2rem;
		margin-bottom: 3rem;
		text-align: center;
		border: 1px solid rgba(255, 255, 255, 0.2);
	}

	.news-title {
		color: white;
		font-size: 3rem;
		font-weight: 300;
		margin-bottom: 1rem;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
	}

	.news-subtitle {
		color: rgba(255, 255, 255, 0.9);
		font-size: 1.2rem;
		margin-bottom: 2rem;
	}

	.back-button {
		display: inline-flex;
		align-items: center;
		gap: 10px;
		background: rgba(255, 255, 255, 0.2);
		color: white;
		padding: 12px 24px;
		border-radius: 25px;
		text-decoration: none;
		transition: all 0.3s ease;
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.3);
	}

		.back-button:hover {
			background: rgba(255, 255, 255, 0.3);
			transform: translateY(-2px);
			color: white;
			text-decoration: none;
		}

	/* Filter Section */
	.filter-section {
		background: white;
		border-radius: 20px;
		padding: 2rem;
		margin-bottom: 3rem;
		box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
	}

	.filter-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 1.5rem;
	}

	.filter-title {
		color: #2c3e50;
		font-size: 1.5rem;
		font-weight: 600;
		margin: 0;
	}

	.news-count {
		color: #7f8c8d;
		font-size: 1rem;
	}

	.filter-buttons {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.filter-btn {
		padding: 10px 20px;
		border: 2px solid #e74c3c;
		background: transparent;
		color: #e74c3c;
		border-radius: 25px;
		cursor: pointer;
		transition: all 0.3s ease;
		font-weight: 500;
		text-decoration: none;
		display: inline-block;
	}

		.filter-btn:hover,
		.filter-btn.active {
			background: #e74c3c;
			color: white;
			text-decoration: none;
		}

	/* News Grid */
	.news-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
		margin-bottom: 3rem;
	}

	/* Featured News (Larger card) */
	.news-card.featured {
		grid-column: span 2;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 2rem;
		background: white;
		border-radius: 20px;
		overflow: hidden;
		box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
		transition: all 0.3s ease;
	}

		.news-card.featured:hover {
			transform: translateY(-8px);
			box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
		}

		.news-card.featured .news-image {
			height: 100%;
			min-height: 300px;
		}

		.news-card.featured .news-content {
			padding: 2.5rem;
			display: flex;
			flex-direction: column;
			justify-content: center;
		}

		.news-card.featured .news-title-card {
			font-size: 2rem;
			line-height: 1.3;
			margin-bottom: 1.5rem;
		}

		.news-card.featured .news-excerpt {
			font-size: 1.1rem;
			line-height: 1.6;
			margin-bottom: 2rem;
		}

	/* Regular News Cards */
	.news-card {
		background: white;
		border-radius: 20px;
		overflow: hidden;
		box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
		transition: all 0.3s ease;
		cursor: pointer;
		text-decoration: none;
		color: inherit;
	}

		.news-card:hover {
			transform: translateY(-8px);
			box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
			text-decoration: none;
			color: inherit;
		}

	.news-image {
		width: 100%;
		height: 220px;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.news-card:hover .news-image {
		transform: scale(1.05);
	}

	.news-content {
		padding: 1.5rem;
	}

	.news-meta {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 1rem;
	}

	.news-category-badge {
		display: inline-block;
		background: #e74c3c;
		color: white;
		font-size: 0.75rem;
		padding: 0.3rem 0.8rem;
		border-radius: 15px;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

		.news-category-badge.local {
			background: #e74c3c;
		}

		.news-category-badge.deportes {
			background: #3498db;
		}

		.news-category-badge.internacional {
			background: #9b59b6;
		}

		.news-category-badge.turismo {
			background: #f39c12;
		}

		.news-category-badge.clima {
			background: #27ae60;
		}

		.news-category-badge.cultura {
			background: #e67e22;
		}

	.news-date {
		color: #7f8c8d;
		font-size: 0.85rem;
		display: flex;
		align-items: center;
		gap: 5px;
	}

	.news-title-card {
		color: #2c3e50;
		font-size: 1.3rem;
		font-weight: 600;
		line-height: 1.4;
		margin-bottom: 1rem;
		transition: color 0.2s ease;
	}

	.news-card:hover .news-title-card {
		color: #5ebdff;
	}

	.news-excerpt {
		color: #7f8c8d;
		font-size: 0.95rem;
		line-height: 1.6;
		margin-bottom: 1rem;
		display: -webkit-box;
		-webkit-line-clamp: 3;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.news-author {
		display: flex;
		align-items: center;
		gap: 10px;
		padding-top: 1rem;
		border-top: 1px solid #ecf0f1;
	}

	.author-avatar {
		width: 30px;
		height: 30px;
		border-radius: 50%;
		background: #5ebdff;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		font-weight: 600;
		font-size: 0.8rem;
	}

	.author-info {
		flex: 1;
	}

	.author-name {
		color: #2c3e50;
		font-size: 0.85rem;
		font-weight: 600;
		margin: 0;
	}

	.author-role {
		color: #7f8c8d;
		font-size: 0.75rem;
		margin: 0;
	}

	/* News Layout */
	.news-layout {
		display: grid;
		grid-template-columns: 1fr 300px;
		gap: 3rem;
	}

	.trending-sidebar {
		background: white;
		border-radius: 20px;
		padding: 2rem;
		height: fit-content;
		box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
		position: sticky;
		top: 2rem;
	}

	.sidebar-title {
		color: #2c3e50;
		font-size: 1.3rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		display: flex;
		align-items: center;
		gap: 10px;
	}

	.trending-item {
		display: block;
		padding: 1rem 0;
		border-bottom: 1px solid #ecf0f1;
		text-decoration: none;
		color: inherit;
		transition: all 0.2s ease;
		cursor: pointer;
	}

		.trending-item:last-child {
			border-bottom: none;
		}

		.trending-item:hover {
			background: rgba(231, 76, 60, 0.05);
			margin: 0 -1rem;
			padding: 1rem;
			border-radius: 8px;
			text-decoration: none;
			color: inherit;
		}

	.trending-number {
		display: inline-block;
		width: 25px;
		height: 25px;
		background: #e74c3c;
		color: white;
		border-radius: 50%;
		text-align: center;
		line-height: 25px;
		font-size: 0.8rem;
		font-weight: 600;
		margin-right: 10px;
	}

	.trending-title {
		font-size: 0.9rem;
		color: #2c3e50;
		font-weight: 500;
		line-height: 1.3;
	}

	/* MODAL STYLES */
	.news-modal {
		display: none;
		position: fixed;
		z-index: 1000;
		left: 0;
		top: 0;
		width: 100%;
		height: 100%;
		background-color: #5ebdff;
		backdrop-filter: blur(5px);
	}

	.modal-content {
		background-color: white;
		margin: 2% auto;
		padding: 0;
		border-radius: 20px;
		width: 90%;
		max-width: 900px;
		max-height: 90vh;
		overflow: hidden;
		box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
		animation: modalSlideIn 0.3s ease-out;
	}

	@@keyframes modalSlideIn {
		from {
			transform: translateY(-50px);
			opacity: 0;
		}

		to {
			transform: translateY(0);
			opacity: 1;
		}
	}

	.modal-header {
		position: relative;
		height: 300px;
		overflow: hidden;
	}

	.modal-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.modal-overlay {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
		color: white;
		padding: 3rem 2rem 2rem;
	}

	.modal-category {
		background: rgba(255, 255, 255, 0.2);
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 20px;
		font-size: 0.8rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.5px;
		display: inline-block;
		margin-bottom: 1rem;
	}

	.modal-title {
		font-size: 2rem;
		font-weight: 700;
		line-height: 1.2;
		margin-bottom: 0.5rem;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
	}

	.modal-meta {
		display: flex;
		align-items: center;
		gap: 1rem;
		font-size: 0.9rem;
		opacity: 0.9;
	}

	.modal-body {
		padding: 2rem;
		max-height: 400px;
		overflow-y: auto;
	}

	.modal-excerpt {
		font-size: 1.1rem;
		line-height: 1.6;
		color: #2c3e50;
		margin-bottom: 2rem;
		font-weight: 500;
	}

	.modal-content-text {
		font-size: 1rem;
		line-height: 1.8;
		color: #34495e;
		margin-bottom: 2rem;
	}

	.modal-author {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 1.5rem 2rem;
		background: #f8f9fa;
		border-top: 1px solid #ecf0f1;
	}

	.modal-author-avatar {
		width: 50px;
		height: 50px;
		border-radius: 50%;
		background: #e74c3c;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		font-weight: 600;
		font-size: 1.2rem;
	}

	.modal-author-info h4 {
		color: #2c3e50;
		margin: 0 0 0.25rem 0;
		font-size: 1rem;
	}

	.modal-author-info p {
		color: #7f8c8d;
		margin: 0;
		font-size: 0.9rem;
	}

	.close-modal {
		color: white;
		position: absolute;
		top: 15px;
		right: 20px;
		font-size: 2rem;
		font-weight: bold;
		cursor: pointer;
		z-index: 1001;
		background: rgba(0, 0, 0, 0.5);
		width: 40px;
		height: 40px;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: all 0.3s ease;
	}

		.close-modal:hover {
			background: rgba(0, 0, 0, 0.8);
			transform: scale(1.1);
		}

	/* Responsive */
	@@media (max-width: 1024px) {
		.news-layout {
			grid-template-columns: 1fr;
		}

		.trending-sidebar {
			order: -1;
			position: static;
		}

		.news-card.featured {
			grid-column: span 1;
			grid-template-columns: 1fr;
		}

			.news-card.featured .news-image {
				height: 250px;
			}

		.modal-content {
			margin: 5% auto;
			width: 95%;
		}

		.modal-title {
			font-size: 1.5rem;
		}
	}

	@@media (max-width: 768px) {
		.container.body-content {
			padding: 1rem 0.5rem;
		}

		.news-header {
			padding: 2rem 1rem;
		}

		.news-title {
			font-size: 2rem;
		}

		.filter-buttons {
			justify-content: center;
		}

		.news-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.filter-header {
			flex-direction: column;
			gap: 1rem;
			text-align: center;
		}

		.modal-content {
			margin: 0;
			width: 100%;
			height: 100vh;
			border-radius: 0;
		}

		.modal-body {
			max-height: none;
		}
	}
</style>

<div class="news-layout">
	<main class="news-main">
		<!-- Header -->
		<section class="news-header">
			<h1 class="news-title">📰 Noticias</h1>
			<p class="news-subtitle">Mantente informado con las últimas noticias de Maldonado y el mundo</p>
			<a href="@Url.Action("Index", "Home")" class="back-button">
				<i class="fas fa-arrow-left"></i>
				Volver al inicio
			</a>
		</section>

		<!-- Filters -->
		<section class="filter-section">
			<div class="filter-header">
				<h2 class="filter-title">Filtrar noticias</h2>
				<span class="news-count">Mostrando @Model.TotalCount noticias</span>
			</div>
			<div class="filter-buttons">
				<a href="@Url.Action("News", "Home")" class="filter-btn @(string.IsNullOrEmpty(Model.SelectedCategory) ? "active" : "")">
					Todas
				</a>
				<a href="@Url.Action("News", "Home", new { category = "Local" })" class="filter-btn @(Model.SelectedCategory == "Local" ? "active" : "")">
					Local
				</a>
				<a href="@Url.Action("News", "Home", new { category = "Deportes" })" class="filter-btn @(Model.SelectedCategory == "Deportes" ? "active" : "")">
					Deportes
				</a>
				<a href="@Url.Action("News", "Home", new { category = "Internacional" })" class="filter-btn @(Model.SelectedCategory == "Internacional" ? "active" : "")">
					Internacional
				</a>
				<a href="@Url.Action("News", "Home", new { category = "Turismo" })" class="filter-btn @(Model.SelectedCategory == "Turismo" ? "active" : "")">
					Turismo
				</a>
				<a href="@Url.Action("News", "Home", new { category = "Clima" })" class="filter-btn @(Model.SelectedCategory == "Clima" ? "active" : "")">
					Clima
				</a>
				<a href="@Url.Action("News", "Home", new { category = "Cultura" })" class="filter-btn @(Model.SelectedCategory == "Cultura" ? "active" : "")">
					Cultura
				</a>
			</div>
		</section>

		<!-- News Grid -->
		<section class="news-grid">
			@if (Model.NewsItems != null && Model.NewsItems.Any())
			{
				foreach (var news in Model.NewsItems)
				{
					<article class="news-card @(news.IsFeatured ? "featured" : "")" onclick="openNewsModal(@news.Id)">
						<img src="@(string.IsNullOrEmpty(news.ImageURL) ? "/Assets/default-news.jpg" : news.ImageURL)"
							 alt="@news.Title" class="news-image"
							 onerror="this.src='https://images.unsplash.com/photo-1585829365295-ab7cd400c167?w=400&h=220&fit=crop'">

						<div class="news-content">
							<div class="news-meta">
								<span class="news-category-badge @(news.Category?.ToLower() ?? "sin-categoria")">@news.Category</span>
								<div class="news-date">
									<i class="fas fa-clock"></i>
									@news.TimeAgo
								</div>
							</div>

							@if (news.IsFeatured)
							{
								<h2 class="news-title-card">@news.Title</h2>
							}
							else
							{
								<h3 class="news-title-card">@news.Title</h3>
							}

							<p class="news-excerpt">@news.Excerpt</p>

							<div class="news-author">
								<div class="author-avatar">@news.AuthorInitials</div>
								<div class="author-info">
									<p class="author-name">@news.Author</p>
									<p class="author-role">@news.AuthorRole</p>
								</div>
							</div>
						</div>
					</article>
				}
			}
			else
			{
				<div style="grid-column: 1 / -1; text-align: center; padding: 3rem;">
					<h3>No hay noticias disponibles</h3>
					<p>Intenta con otra categoría o vuelve más tarde.</p>
				</div>
			}
		</section>

	</main>

	<!-- Sidebar -->
	<aside class="trending-sidebar">
		<h3 class="sidebar-title">
			<i class="fas fa-fire" style="color: #e74c3c;"></i>
			Tendencias
		</h3>

		@if (Model.TrendingNews != null && Model.TrendingNews.Any())
		{
			for (int i = 0; i < Math.Min(5, Model.TrendingNews.Count); i++)
			{
				var trending = Model.TrendingNews[i];
				<div class="trending-item" onclick="openNewsModal(@trending.Id)">
					<span class="trending-number">@(i + 1)</span>
					<span class="trending-title">@trending.Title</span>
				</div>
			}
		}
		else
		{
			<p style="color: #7f8c8d; font-style: italic;">No hay noticias trending disponibles.</p>
		}
	</aside>
</div>

<!-- MODAL PARA MOSTRAR NOTICIA COMPLETA -->
<div id="newsModal" class="news-modal">
	<div class="modal-content">
		<span class="close-modal" onclick="closeNewsModal()">&times;</span>

		<div class="modal-header">
			<img id="modalImage" src="" alt="" class="modal-image">
			<div class="modal-overlay">
				<span id="modalCategory" class="modal-category"></span>
				<h2 id="modalTitle" class="modal-title"></h2>
				<div class="modal-meta">
					<span id="modalDate"></span>
					<span>•</span>
					<span id="modalAuthorName"></span>
				</div>
			</div>
		</div>

		<div class="modal-body">
			<p id="modalExcerpt" class="modal-excerpt"></p>
			<div id="modalContent" class="modal-content-text"></div>
		</div>

		<div class="modal-author">
			<div id="modalAuthorAvatar" class="modal-author-avatar"></div>
			<div class="modal-author-info">
				<h4 id="modalAuthorFullName"></h4>
				<p id="modalAuthorRole"></p>
			</div>
		</div>
	</div>
</div>

@section scripts {
	<script>
		// Función para decodificar UTF-8 correctamente
		function decodeUTF8(str) {
			try {
				return decodeURIComponent(escape(atob(str)));
			} catch (e) {
				return atob(str);
			}
		}

		// Datos de noticias para el modal - Codificados en Base64 para evitar problemas de caracteres
		var newsDataEncoded = [
			@if (Model.NewsItems != null && Model.NewsItems.Any())
			{
				foreach (var news in Model.NewsItems)
				{
					<text>
					{
						id: @news.Id,
						title: "@Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes(news.Title ?? ""))",
						excerpt: "@Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes(news.Excerpt ?? ""))",
						content: "@Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes(news.Content ?? "Contenido completo de la noticia..."))",
						category: "@Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes(news.Category ?? ""))",
						imageURL: "@(news.ImageURL ?? "")",
						author: "@Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes(news.Author ?? ""))",
						authorRole: "@Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes(news.AuthorRole ?? ""))",
						authorInitials: "@Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes(news.AuthorInitials ?? ""))",
						timeAgo: "@Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes(news.TimeAgo ?? ""))"
					},
					</text>
				}
			}
		];

		// Decodificar los datos con UTF-8 correcto
		var newsData = newsDataEncoded.map(function(item) {
			return {
				id: item.id,
				title: decodeUTF8(item.title),
				excerpt: decodeUTF8(item.excerpt),
				content: decodeUTF8(item.content),
				category: decodeUTF8(item.category),
				imageURL: item.imageURL,
				author: decodeUTF8(item.author),
				authorRole: decodeUTF8(item.authorRole),
				authorInitials: decodeUTF8(item.authorInitials),
				timeAgo: decodeUTF8(item.timeAgo)
			};
		});

		// Función para abrir el modal con la noticia
		function openNewsModal(newsId) {
			var news = newsData.find(n => n.id === newsId);
			if (!news) return;

			// Llenar datos del modal
			document.getElementById('modalImage').src = news.imageURL || 'https://images.unsplash.com/photo-1585829365295-ab7cd400c167?w=900&h=300&fit=crop';
			document.getElementById('modalCategory').textContent = news.category;
			document.getElementById('modalTitle').textContent = news.title;
			document.getElementById('modalDate').textContent = news.timeAgo;
			document.getElementById('modalAuthorName').textContent = news.author;
			document.getElementById('modalExcerpt').textContent = news.excerpt;
			document.getElementById('modalContent').innerHTML = generateFullContent(news);
			document.getElementById('modalAuthorAvatar').textContent = news.authorInitials;
			document.getElementById('modalAuthorFullName').textContent = news.author;
			document.getElementById('modalAuthorRole').textContent = news.authorRole;

			// Mostrar modal
			document.getElementById('newsModal').style.display = 'block';
			document.body.style.overflow = 'hidden';
		}

		// Función para cerrar el modal
		function closeNewsModal() {
			document.getElementById('newsModal').style.display = 'none';
			document.body.style.overflow = 'auto';
		}

		// Función para generar contenido completo
		function generateFullContent(news) {
			if (news.content && news.content !== 'Sin contenido') {
				return news.content;
			}

			// Generar contenido basado en categoría
			var content = '<p>' + news.excerpt + '</p>';

			switch(news.category.toLowerCase()) {
				case 'local':
					content += '<p>Esta iniciativa representa un paso importante para el desarrollo económico de nuestra región. Las autoridades municipales han expresado su satisfacción por el interés mostrado en establecerse en Maldonado.</p>';
					content += '<p>Se espera que estos desarrollos generen empleos de calidad y contribuyan al crecimiento sostenible del departamento.</p>';
					break;
				case 'deportes':
					content += '<p>El encuentro se disputó en un ambiente festivo, con la participación de miles de espectadores. La actuación destacada mantuvo a los fanáticos atentos durante todo el evento.</p>';
					content += '<p>Este resultado marca un hito importante en la temporada actual y genera expectativas para los próximos encuentros.</p>';
					break;
				case 'turismo':
					content += '<p>Esta noticia representa un impulso significativo para el sector turístico de la región. Los operadores locales han expresado su optimismo sobre el impacto positivo esperado.</p>';
					content += '<p>Las nuevas propuestas prometen diversificar la oferta existente y atraer a diferentes segmentos de visitantes.</p>';
					break;
				case 'cultura':
					content += '<p>Esta iniciativa cultural representa el compromiso continuo de preservar y promover las artes en nuestra comunidad. Los organizadores han preparado una programación diversa y de calidad.</p>';
					content += '<p>El evento promete enriquecer la vida cultural de la región y brindar oportunidades para el intercambio artístico.</p>';
					break;
				default:
					content += '<p>Esta noticia representa un desarrollo importante para nuestra comunidad. Los responsables continúan monitoreando la situación de cerca.</p>';
					content += '<p>Se esperan más detalles en los próximos días sobre las implicaciones de este acontecimiento.</p>';
			}

			content += '<p><strong>Voz del Este</strong> continuará siguiendo de cerca este tema para mantener informada a la comunidad.</p>';

			return content;
		}

		// Cerrar modal al hacer clic fuera
		window.onclick = function(event) {
			var modal = document.getElementById('newsModal');
			if (event.target == modal) {
				closeNewsModal();
			}
		}

		// Cerrar modal con tecla Escape
		document.addEventListener('keydown', function(event) {
			if (event.key === 'Escape') {
				closeNewsModal();
			}
		});

		// Animación de entrada para las tarjetas
		document.addEventListener('DOMContentLoaded', function () {
			const cards = document.querySelectorAll('.news-card');
			cards.forEach((card, index) => {
				card.style.opacity = '0';
				card.style.transform = 'translateY(30px)';

				setTimeout(() => {
					card.style.transition = 'all 0.6s ease';
					card.style.opacity = '1';
					card.style.transform = 'translateY(0)';
				}, index * 100);
			});
		});
	</script>
