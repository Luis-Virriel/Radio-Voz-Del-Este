
@{
    ViewBag.Title = "Divisas - Voz del Este";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-dark text-light min-vh-100">
    <!-- Header elegante -->
    <div class="container-fluid py-4">
        <div class="row align-items-center">
            <div class="col-auto">
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-light btn-sm rounded-pill px-3">
                    <i class="fas fa-arrow-left me-2"></i>Volver
                </a>
            </div>
            <div class="col text-center">
                <h1 class="page-title mb-0">
                    <span class="currency-emoji">💰</span>
                    Divisas Mundiales
                    <span class="currency-emoji">💱</span>
                </h1>
                <p class="subtitle">Cotizaciones en tiempo real</p>
            </div>
            <div class="col-auto">
                <div class="last-update">
                    <small class="text-muted">
                        <i class="fas fa-clock me-1"></i>
                        Actualizado: @DateTime.Now.ToString("HH:mm")
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid px-4">
        <!-- Divisas principales destacadas -->
        <div class="row mb-5">
            <div class="col-12">
                <h3 class="section-title mb-4">
                    <span class="title-accent"></span>
                    Divisas Principales
                </h3>
            </div>
        </div>

        <div class="row g-4 mb-5">
            <!-- USD/UYU - Destacado -->
            <div class="col-lg-4 col-md-6">
                <div class="currency-card featured-card">
                    <div class="currency-header">
                        <div class="currency-flags">
                            <span class="flag">🇺🇸</span>
                            <span class="arrow">→</span>
                            <span class="flag">🇺🇾</span>
                        </div>
                        <div class="currency-pair">USD/UYU</div>
                    </div>
                    <div class="currency-body">
                        @if (Model.HasCurrencyData && Model.CurrencyData.Quotes.ContainsKey("USDUYU"))
                        {
                            <div class="rate-display featured-rate">$@Model.CurrencyData.Quotes["USDUYU"].ToString("0.00")</div>
                            <div class="rate-change positive">+0.45%</div>
                        }
                        else
                        {
                            <div class="rate-display">--</div>
                            <div class="rate-change neutral">Sin datos</div>
                        }
                    </div>
                    <div class="currency-footer">
                        <small class="currency-name">Dólar Estadounidense → Peso Uruguayo</small>
                    </div>
                </div>
            </div>

            <!-- EUR/USD -->
            <div class="col-lg-4 col-md-6">
                <div class="currency-card">
                    <div class="currency-header">
                        <div class="currency-flags">
                            <span class="flag">🇪🇺</span>
                            <span class="arrow">→</span>
                            <span class="flag">🇺🇸</span>
                        </div>
                        <div class="currency-pair">EUR/USD</div>
                    </div>
                    <div class="currency-body">
                        <div class="rate-display">1.0847</div>
                        <div class="rate-change negative">-0.12%</div>
                    </div>
                    <div class="currency-footer">
                        <small class="currency-name">Euro → Dólar</small>
                    </div>
                </div>
            </div>

            <!-- GBP/USD -->
            <div class="col-lg-4 col-md-6">
                <div class="currency-card">
                    <div class="currency-header">
                        <div class="currency-flags">
                            <span class="flag">🇬🇧</span>
