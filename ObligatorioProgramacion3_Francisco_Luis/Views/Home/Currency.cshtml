<!-- Estilos para la página de divisas -->
<style>
    /* Variables */
    :root {
        --primary-gold: #f39c12;
        --success-green: #27ae60;
        --danger-red: #e74c3c;
        --primary-blue: #3498db;
        --bg-card: rgba(255, 255, 255, 0.05);
        --bg-card-hover: rgba(255, 255, 255, 0.08);
        --text-light: #ecf0f1;
        --text-muted: #bdc3c7;
        --border-color: rgba(255, 255, 255, 0.1);
    }

    /* Header */
    .page-title {
        font-size: 2.5rem;
        font-weight: 300;
        letter-spacing: 1px;
        color: var(--text-light);
    }

    .currency-emoji {
        font-size: 2rem;
        margin: 0 15px;
    }

    .subtitle {
        color: var(--text-muted);
        font-size: 1.1rem;
        margin-top: 10px;
    }

    .last-update {
        padding: 8px 15px;
        background: var(--bg-card);
        border-radius: 20px;
        border: 1px solid var(--border-color);
    }

    /* Secciones */
    .section-title {
        font-size: 1.5rem;
        font-weight: 400;
        color: var(--text-light);
        position: relative;
        padding-left: 20px;
    }

    .title-accent {
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 4px;
        height: 25px;
        background: linear-gradient(135deg, var(--primary-gold), var(--primary-blue));
        border-radius: 2px;
    }

    /* Tarjetas de divisas principales */
    .currency-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 20px;
        padding: 25px;
        height: 100%;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
        cursor: pointer;
    }

        .currency-card:hover {
            background: var(--bg-card-hover);
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
        }

    .featured-card {
        background: linear-gradient(135deg, rgba(243, 156, 18, 0.1), rgba(52, 152, 219, 0.1));
        border: 2px solid var(--primary-gold);
    }

    .currency-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .currency-flags {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin-bottom: 10px;
    }

    .flag {
        font-size: 2rem;
    }

    .arrow {
        font-size: 1.2rem;
        color: var(--text-muted);
    }

    .currency-pair {
        font-size: 1.3rem;
        font-weight: 600;
        color: var(--text-light);
        letter-spacing: 1px;
    }

    .currency-body {
        text-align: center;
        margin-bottom: 15px;
    }

    .rate-display {
        font-size: 2.2rem;
        font-weight: 700;
        color: var(--text-light);
        margin-bottom: 5px;
    }

    .featured-rate {
        font-size: 2.8rem;
        background: linear-gradient(135deg, var(--primary-gold), var(--primary-blue));
        -webkit-text-fill-color: transparent;
    }

    .rate-change {
        font-size: 1rem;
        font-weight: 600;
        padding: 4px 12px;
        border-radius: 15px;
        display: inline-block;
    }

        .rate-change.positive {
            background: rgba(39, 174, 96, 0.2);
            color: var(--success-green);
        }

        .rate-change.negative {
            background: rgba(231, 76, 60, 0.2);
            color: var(--danger-red);
        }

        .rate-change.neutral {
            background: rgba(189, 195, 199, 0.2);
            color: var(--text-muted);
        }

    .currency-footer {
        text-align: center;
    }

    .currency-name {
        color: var(--text-muted);
        font-size: 0.9rem;
    }

    /* Tarjetas compactas */
    .currency-card.compact {
        padding: 20px;
        border-radius: 15px;
    }

    .currency-flags-small {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 8px;
    }

    .flag-small {
        font-size: 1.2rem;
    }

    .pair-small {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--text-light);
    }

    .rate-small {
        font-size: 1.4rem;
        font-weight: 700;
        color: var(--text-light);
    }

    .change-small {
        font-size: 0.85rem;
        font-weight: 600;
        padding: 3px 8px;
        border-radius: 10px;
    }

        .change-small.positive {
            background: rgba(39, 174, 96, 0.2);
            color: var(--success-green);
        }

        .change-small.negative {
            background: rgba(231, 76, 60, 0.2);
            color: var(--danger-red);
        }

    /* Tarjeta de información */
    .info-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 20px;
        padding: 30px;
        backdrop-filter: blur(10px);
    }

    .info-title {
        color: var(--text-light);
        font-size: 1.3rem;
        font-weight: 500;
        margin-bottom: 20px;
    }

    .info-item {
        display: flex;
        align-items: flex-start;
        gap: 15px;
    }

    .info-icon {
        font-size: 1.5rem;
        margin-top: 5px;
    }

    .info-item h6 {
        color: var(--text-light);
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .info-item p {
        color: var(--text-muted);
        font-size: 0.9rem;
        margin: 0;
        line-height: 1.5;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-title {
            font-size: 1.8rem;
        }

        .currency-emoji {
            font-size: 1.5rem;
            margin: 0 8px;
        }

        .rate-display {
            font-size: 1.8rem;
        }

        .featured-rate {
            font-size: 2.2rem;
        }

        .currency-card {
            padding: 20px;
        }

        .info-card {
            padding: 20px;
        }

        .last-update {
            display: none;
        }
    }

    /* Animaciones */
    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    .currency-emoji {
        animation: float 3s ease-in-out infinite;
    }

        .currency-emoji:nth-child(2) {
            animation-delay: 1.5s;
        }
</style>

@section scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animaciones de hover para las tarjetas
            const currencyCards = document.querySelectorAll('.currency-card');

            currencyCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.borderColor = 'rgba(243, 156, 18, 0.5)';
                });

                card.addEventListener('mouseleave', function() {
                    if (!this.classList.contains('featured-card')) {
                        this.style.borderColor = 'rgba(255, 255, 255, 0.1)';
                    }
                });
            });

            // Simulación de actualización de datos cada 30 segundos
            setInterval(function() {
                const timeElement = document.querySelector('.last-update small');
                if (timeElement) {
                    const now = new Date();
                    const timeString = now.toLocaleTimeString('es-UY', {
                        hour: '2-digit',
                        minute: '2-digit'
                    });
                    timeElement.innerHTML = '<i class="fas fa-clock me-1"></i>Actualizado: ' + timeString;
                }
            }, 30000);

            // Efecto de pulso en los cambios de precio
            const changes = document.querySelectorAll('.rate-change, .change-small');
            changes.forEach(change => {
                change.addEventListener('animationend', function() {
                    this.style.animation = '';
                });

                // Simular cambio de precio ocasionalmente
                if (Math.random() > 0.7) {
                    setTimeout(() => {
                        change.style.animation = 'pulse 0.5s ease-in-out';
                    }, Math.random() * 5000);
                }
            });
        });
    </script>
}
