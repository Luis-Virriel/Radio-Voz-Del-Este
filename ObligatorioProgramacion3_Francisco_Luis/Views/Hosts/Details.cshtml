@model ObligatorioProgramacion3_Francisco_Luis.Models.Host

@{
    ViewBag.Title = "Details";
}

<div class="details-container">
    <h2 class="details-title">Detalles</h2>
    <hr />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bona+Nova+SC:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link href="~/Content/Styles/StyleHost/StyleDetailsHost.css" rel="stylesheet" />
    <dl class="dl-horizontal">
        <dt>
            Nombre
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HostName)
        </dd>

        <dt>
            Descripcion
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Bio)
        </dd>

        <dt>
            Programa
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RadioProgram.ProgramName)
        </dd>
    </dl>

    <div class="details-actions">
        @Html.ActionLink("Editar", "Edit", new { id = Model.ID })
        @Html.ActionLink("← Volver a la Lista", "Index")
    </div>

</div>
