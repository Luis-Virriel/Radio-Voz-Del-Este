@model ObligatorioProgramacion3_Francisco_Luis.Models.Host

@{
    ViewBag.Title = "Editar Host";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Fuentes y estilos -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Bona+Nova+SC:wght@400;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
<link href="~/Content/Styles/StyleHost/StyleEditHost.css" rel="stylesheet" />

<div class="edit-container">
    <h2 class="edit-title">Editar Host</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Datos del Host</h4>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                @Html.LabelFor(model => model.HostName, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.HostName, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre" } })
                    @Html.ValidationMessageFor(model => model.HostName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Bio, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Bio, new { htmlAttributes = new { @class = "form-control", placeholder = "Biografía" } })
                    @Html.ValidationMessageFor(model => model.Bio, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ProgramID, "Programa", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownList("ProgramID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ProgramID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    @Html.ActionLink("← Volver a la Lista", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
