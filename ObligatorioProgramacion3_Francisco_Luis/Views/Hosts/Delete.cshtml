@model ObligatorioProgramacion3_Francisco_Luis.Models.Host

@{
    ViewBag.Title = "Delete";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Bona+Nova+SC:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
<link href="~/Content/Styles/StyleHost/StyleDeleteHost.css" rel="stylesheet" />
<div class="delete-container">
    <h2 class="delete-title">Eliminar Conductor</h2>

    <h3 class="confirm-text">¿Estás seguro que deseas eliminar este registro?</h3>
    <hr />

    <dl class="dl-horizontal">
        <dt>
            Nombre
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HostName)
        </dd>

        <dt>
            Biografia
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Bio)
        </dd>

        <dt>
            Programa
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RadioProgram.ProgramName)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="button-container">
            <input type="submit" value="Eliminar" class="btn-delete" />
            @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "delete-page-back-button" })
        </div>
    }
</div>
