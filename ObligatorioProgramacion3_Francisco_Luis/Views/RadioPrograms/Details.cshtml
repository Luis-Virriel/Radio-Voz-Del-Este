@model ObligatorioProgramacion3_Francisco_Luis.Models.RadioProgram

@{
    ViewBag.Title = "Details";
}
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Bona+Nova+SC:ital,wght@0,400;0,700;1,400&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet" />
<link href="~/Content/Styles/StyleRadioPrograms/StyleDetailsRadioProgram.css" rel="stylesheet" />
<div class="details-container">
    <h2 class="details-title">Detalles del Programa</h2>
    <h4 class="details-subtitle">Información completa del programa de radio</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProgramName)
        </dd>

        <dt>
           Portada
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ImageURL)
        </dd>

        <dt>
            Descripcion
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RadioDescription)
        </dd>

        <dt>
            Programacion
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Schedule)
        </dd>
    </dl>

    <div class="details-actions">
        @Html.ActionLink("Editar", "Edit", new { id = Model.ID }, new { @class = "btn-primary" })
        @Html.ActionLink("← Volver a la Lista", "Index", null, new { @class = "btn-secondary" })
    </div>
</div>
