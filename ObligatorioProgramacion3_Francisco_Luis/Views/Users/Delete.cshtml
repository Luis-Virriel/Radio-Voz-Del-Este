@model ObligatorioProgramacion3_Francisco_Luis.Models.User

@{
    ViewBag.Title = "Eliminar Usuario";
}

<!-- Fonts y Estilos -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Bona+Nova+SC:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet" />
<link href="~/Content/Styles/StylesUsers/StyleDeleteUser.css" rel="stylesheet" />

<div class="delete-container">
    <h1 class="delete-title">Eliminar Usuario</h1>

    @* Mostrar errores si hay *@
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="validation-summary-errors">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
    }

    <p class="confirm-text">¿Está seguro que desea eliminar este usuario?</p>
    <hr />

    <dl class="dl-horizontal">
        <dt>Usuario:</dt>
        <dd>@Html.DisplayFor(m => m.UserName)</dd>

        <dt>Correo Electrónico:</dt>
        <dd>@Html.DisplayFor(m => m.Email)</dd>

        <dt>Contraseña:</dt>
        <dd class="password-value">•••••••••••</dd>

        <dt>Rol:</dt>
        <dd>@Html.DisplayFor(m => m.Role.RoleName)</dd>
    </dl>

    @using (Html.BeginForm("Delete", "Users", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ID)

        <div class="button-container">
            <input type="submit" value="Eliminar" class="btn" />
            @Html.ActionLink("← Volver a la Lista", "Index", null, new { @class = "btn" })
        </div>
    }
</div>
