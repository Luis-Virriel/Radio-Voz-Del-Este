@model ObligatorioProgramacion3_Francisco_Luis.Models.User
@{
    ViewBag.Title = "Delete";
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Bona+Nova+SC:ital,wght@0,400;0,700;1,400&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
<link href="~/Content/Styles/StylesUsers/StyleDeleteUser.css" rel="stylesheet" />
<div class="delete-container">
    <h1 class="delete-title">Eliminar Usuario</h1>
    <p class="delete-subtitle">¿Está seguro que desea eliminar este usuario?</p>
    <hr class="delete-divider" />

    <div class="warning-section">
        <span class="warning-icon">⚠️</span>
        <div class="warning-text">¡ATENCIÓN!</div>
        <div class="warning-subtext">Esta acción no se puede deshacer</div>
    </div>

    <div class="user-info-container">
        <h3 class="section-title">Información del Usuario</h3>

        <dl class="user-details">
            <dt class="detail-label">
                @Html.DisplayNameFor(model => model.UserName):
            </dt>
            <dd class="detail-value">
                @Html.DisplayFor(model => model.UserName)
            </dd>

            <dt class="detail-label">
                @Html.DisplayNameFor(model => model.Email):
            </dt>
            <dd class="detail-value email-value">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="detail-label">
                @Html.DisplayNameFor(model => model.UserPassword):
            </dt>
            <dd class="detail-value password-value">
                ••••••••••••
            </dd>

            <dt class="detail-label">
                @Html.DisplayNameFor(model => model.Role.RoleName):
            </dt>
            <dd class="detail-value role-value">
                @Html.DisplayFor(model => model.Role.RoleName)
            </dd>
        </dl>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="button-container">
            <input type="submit" value="Confirmar Eliminación" class="delete-button" />
            <span class="button-separator">|</span>
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "cancel-button" })
        </div>
    }
</div>